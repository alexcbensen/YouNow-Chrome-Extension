{
  "manifest_version": 3,
  "name": "Alex's BetterNow",
  "version": "2.4.2",
  "icons": {
    "16": "icons/favicon-1.png",
    "48": "icons/favicon-2.png",
    "128": "icons/favicon-3.png"
  },
  "description": "Adds visual enhancements and quality-of-life improvements to your streaming experience.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.younow.com/*", "https://younow.com/*"],
      "js": ["js/features/filter-bypass/injector.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.younow.com/*", "https://younow.com/*"],
      "css": ["styles.css"],
      "js": [
        "js/config.js",
        "js/helpers.js",
        "js/templates.js",
        "js/features/grid/grid.js",
        "js/features.js",
        "js/features/badges/badges.js",
        "js/features/chat/chat.js",
        "js/features/chest/chest.js",
        "js/features/explore/explore.js",
        "js/features/volume/volume.js",
        "js/firebase.js",
        "js/admin.js",
        "js/debug.js",
        "js/script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/golden-border-2.svg", "js/features/filter-bypass/filter-bypass.js"],
      "matches": ["https://www.younow.com/*", "https://younow.com/*"]
    }
  ]
}
